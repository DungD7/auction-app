<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.example.auctionappver2.viewmodel.SignupViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dimen_48dp"
        android:background="@color/background_light">
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="name"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:maxLength="20"
            android:background="@drawable/uiv2_bkg_corner_8_white_boder_gray200"
            android:layout_marginHorizontal="@dimen/dimen_16dp"/>
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_name"
            android:hint="email"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:maxLength="20"
            android:background="@drawable/uiv2_bkg_corner_8_white_boder_gray200"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"/>
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_email"
            android:hint="phone number"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:maxLength="20"
            android:background="@drawable/uiv2_bkg_corner_8_white_boder_gray200"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"/>
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_phone"
            android:hint="password"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:maxLength="20"
            android:background="@drawable/uiv2_bkg_corner_8_white_boder_gray200"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"/>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="Đăng ký"
            android:backgroundTint="@color/color_global_green2_900"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_password" />
        <TextView
            android:id="@+id/loginRedirectText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Already an user? Login"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>